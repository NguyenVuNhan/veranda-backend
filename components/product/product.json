{
  "collectionName": "components_common_products",
  "info": {
    "name": "Product",
    "icon": "cube"
  },
  "options": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "price": {
      "type": "float",
      "required": true
    },
    "discount": {
      "type": "float",
      "default": 0,
      "min": 0,
      "max": 100
    },
    "sold": {
      "type": "integer",
      "default": 0
    },
    "estimate_shipping_from": {
      "type": "date"
    },
    "estimate_shipping_to": {
      "type": "date"
    },
    "thumbnail": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "pictures": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "meta_title": {
      "type": "string",
      "required": true
    }
  }
}
